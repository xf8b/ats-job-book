<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<GridPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
          fx:controller="io.github.xf8b.atsjobbook.view.StartJobView"
          prefHeight="400.0" prefWidth="600.0"
          alignment="CENTER"
          hgap="10" vgap="10">
    <HBox spacing="10" alignment="CENTER">
        <Label text="Starting City:"/>
        <ComboBox fx:id="stateComboBox" onAction="#onStateChange"/>
        <ComboBox fx:id="cityComboBox" onAction="#onCityChange"/>
    </HBox>
</GridPane>